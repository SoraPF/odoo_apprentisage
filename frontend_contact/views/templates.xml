<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="list_contact_page" name="lcp">
            <html data-theme="synthwave">
                <head>
                    <link rel="stylesheet" href="/frontend_contact/static/output.css"/>
                </head>
                <body>
                    <h1 class="text-3xl font-bold underline">Contact</h1>
                    <form method="POST" action="">
                        <input type="text" placeholder="Search contact" id="search_bar" name="searchBar"
                               class="my-2 w-full text-sm bg-grey-light text-grey-darkest rounded h-10 p-3 focus:outline-none"/>
                        <ul id="search_results"></ul>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    </form>
                    <div class="overflow-x-auto">
                        <table id="table" class="table table-zebra">
                            <tr>
                                <th>Nom</th>
                                <th>Mobile</th>
                            </tr>
                            <t t-foreach="contact" t-as="ct">
                                <tr>
                                    <td>
                                        <t t-esc="ct.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="ct.mobile"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>

                    <p id="test">Donn√©e de l' input:
                        <t t-esc="input_data"/>
                    </p>

                </body>
                <script type="text/javascript" src="/frontend_contact/static/javascript.js"/>
            </html>
        </template>
    </data>
</odoo>