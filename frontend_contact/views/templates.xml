<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="list_contact_page" name="lcp">
            <html data-theme="synthwave">
                <head>
                    <link rel="stylesheet" href="/frontend_contact/static/output.css"/>
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js">const $ = require('jquery');</script>
                </head>
                <body>
                    <h1 class="text-3xl font-bold underline">Contact</h1>

                    <input type="text" placeholder="Search contact" id="search_bar" name="searchBar"
                           t-att-value="input_data"
                           class="input input-bordered input-secondary w-full max-w-xs"/>
                    <div class="join">
                        <input id="prevBtn" type="button" class="join-item btn" value="prev"/>
                        <div id="pagesButtons">
                            <t t-foreach="pages" t-as="nbpage">
                                <button type="button" class="join-item btn" t-attf-id="btn#{nbpage}">
                                    <t t-esc="nbpage"/>
                                </button>
                            </t>
                        </div>
                        <input id="nextBtn" type="button" class="join-item btn" value="next"/>
                    </div>
                    <div id="etiquettes" class="flex flex-wrap space-x-2 space-y-2">
                        <input type="hidden" class="badge badge-success gap-2 cursor-pointer"/>
                        <span></span>
                    </div>

                    <div class="overflow-x-auto">
                        <table id="table" class="table table-zebra">
                            <tr>
                                <th>Nom</th>
                                <th>Mobile</th>
                                <th>Devis</th>
                            </tr>
                            <t t-foreach="contact" t-as="ct">
                                <tr>
                                    <td>
                                        <t t-esc="ct.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="ct.mobile"/>
                                    </td>
                                    <td>
                                        <input type="button" class="btn s" t-att-id="ct.name" value="devis"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </body>
                <script type="text/javascript" src="/frontend_contact/static/javascript.js"/>
            </html>
        </template>

        <template id="deviPage" name="deviPage">
            <html data-theme="synthwave">
                <head>
                    <link rel="stylesheet" href="/frontend_contact/static/output.css"/>
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js">const $ = require('jquery');</script>
                </head>
                <body>
                    <a href="/fr_BE/frontend_contact/contact"><button>List Contact</button></a>
                    <div class="overflow-x-auto">
                        <table id="table" class="table table-zebra">
                            <tr>
                                <th>Num√©ro</th>
                                <th>date de la commande</th>
                                <th>vendeur</th>
                                <th>Total</th>
                            </tr>
                            <t t-foreach="devis" t-as="dv">
                                <tr>
                                    <td>
                                        <t t-esc="dv.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="dv.date_order"/>
                                    </td>
                                    <td>
                                        <t t-esc="dv.user_id.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="dv.amount_total"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </body>
            </html>
        </template>
    </data>
</odoo>