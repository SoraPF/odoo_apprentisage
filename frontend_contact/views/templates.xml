<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="list_contact_page" name="lcp">
            <html data-theme="synthwave">
                <head>
                    <link rel="stylesheet" href="/frontend_contact/static/output.css"/>
                    <script src="https://code.jquery.com/jquery-3.6.0.min.js">const $ = require('jquery');</script>
                </head>
                <body>
                    <h1 class="text-3xl font-bold underline">Contact</h1>
                    <form method="POST" action="" id="myForm">
                        <input type="text" placeholder="Search contact" id="search_bar" name="searchBar" t-att-value="input_data"
                               class="input input-bordered input-secondary w-full max-w-xs"/>
                        <div class="join">
                          <button id="prevBtn" type="button" class="join-item btn">«</button>
                            <t t-foreach="pages" t-as="nbpage">
                                <t t-esc="nbpage"/>
                            </t>
                          <button id="nextBtn" type="button" class="join-item btn">»</button>
                        </div>
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                    </form>


                    <div class="overflow-x-auto">
                        <table id="table" class="table table-zebra">
                            <tr>
                                <th>Nom</th>
                                <th>Mobile</th>
                            </tr>
                            <t t-foreach="contact" t-as="ct">
                                <tr>
                                    <td>
                                        <t t-esc="ct.name"/>
                                    </td>
                                    <td>
                                        <t t-esc="ct.mobile"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </body>
                <script type="text/javascript" src="/frontend_contact/static/javascript.js"/>
            </html>
        </template>
    </data>
</odoo>